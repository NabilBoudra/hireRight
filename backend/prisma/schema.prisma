generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String        @id @default(uuid())
  title       String
  company     String
  location    String
  salary      String
  description String
  isOpen      Boolean       @default(true)
  Application Application[]

  Bookmark Bookmark[]
}

model User {
  id          String        @id
  email       String        @unique
  name        String
  lastLogin   DateTime?
  lastSeen    DateTime?
  Application Application[]

  Bookmark Bookmark[]
}

model Application {
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  job      Job      @relation(fields: [jobId], references: [id])
  jobId    String
  fileName String
  date     DateTime @default(now())

  @@id(fields: [userId, jobId])
}

model Bookmark {
  user   User     @relation(fields: [userId], references: [id])
  userId String
  job    Job      @relation(fields: [jobId], references: [id])
  jobId  String
  date   DateTime @default(now())

  @@id(fields: [userId, jobId])
}
