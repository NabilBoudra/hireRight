generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String @id @default(uuid())
  title       String
  company     String
  location    String
  salary      String
  description String
}

model User {
  id        String   @id
  email     String   @unique
  name      String
  lastLogin DateTime?
  lastSeen  DateTime?
}
